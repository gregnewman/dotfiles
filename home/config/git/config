[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = emacs
	excludefile = /Users/greg/.config/git/ignore
	autocrlf = input
[github]
     user = gregnewman
[push]
	default = matching
[branch]
    sort = -committerdate
[mergetool]
	keepBackup = false
[alias]
	branches = !legit branches
	publish = !legit publish
	unpublish = !legit unpublish
	sync = !legit sync
	switch = !legit switch
	resync = !legit resync
	undo = !legit undo
[gpg]
	program = /usr/local/bin/gpg
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[pull]
	ff = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    frag = magenta bold
    meta = yellow bold
    new = green bold
    old = red bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[init]
	defaultBranch = main
